<h1>Sign Up Confirmation</h1>



  <div>
    <h3>Are you sure these values are correct?</h3>
    <h5>Email: <%= @user.email %> </h5>
    <h5>Name: <%= @user.name %> </h5>
  </div>


<div class="row">
  <div class="col-md-8", style="width:auto;">
    <%= button_to "Yes", {controller: "users", action: "create", params: params.permit!}, class: 'btn btn-success', :method => :post %>
  </div>
  <div class="col-md-8">
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-success', :method => :get %>

  </div>
</div>